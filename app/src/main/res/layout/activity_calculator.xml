<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calculator.CalculatorActivity">

    <TextView
        android:id="@+id/equation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/size_margin_view_calculator_6dp"
        android:layout_weight="4"
        android:gravity="bottom|end"
        android:textSize="@dimen/calculator_size_text_40sp" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/size_margin_view_calculator_6dp"
        android:layout_weight="1"
        android:fontFamily="@font/acme"
        android:gravity="bottom|end"
        android:text="@string/default_answer_text"
        android:textSize="@dimen/calculator_size_text_40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAc"
                style="@style/CalculatorButtonStyle"
                android:text="AC"/>

            <Button
                android:id="@+id/buttonOpenParenthesis"
                style="@style/CalculatorButtonStyle"
                android:text="(" />

            <Button
                android:id="@+id/buttonClosingParenthesis"
                style="@style/CalculatorButtonStyle"
                android:text=")" />

            <Button
                android:id="@+id/buttonDivision"
                style="@style/CalculatorButtonStyle"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                style="@style/CalculatorButtonStyle"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/CalculatorButtonStyle"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/CalculatorButtonStyle"
                android:text="9" />

            <Button
                android:id="@+id/buttonMultiplication"
                style="@style/CalculatorButtonStyle"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button4"
                style="@style/CalculatorButtonStyle"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/CalculatorButtonStyle"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/CalculatorButtonStyle"
                android:text="6" />

            <Button
                android:id="@+id/buttonMinus"
                style="@style/CalculatorButtonStyle"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button1"
                style="@style/CalculatorButtonStyle"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/CalculatorButtonStyle"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/CalculatorButtonStyle"
                android:text="3" />

            <Button
                android:id="@+id/buttonPlus"
                style="@style/CalculatorButtonStyle"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonBack"
                style="@style/CalculatorButtonStyle"
                android:text="back"/>

            <Button
                android:id="@+id/button0"
                style="@style/CalculatorButtonStyle"
                android:text="0" />

            <Button
                android:id="@+id/buttonPoint"
                style="@style/CalculatorButtonStyle"
                android:text="." />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/CalculatorButtonStyle"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>